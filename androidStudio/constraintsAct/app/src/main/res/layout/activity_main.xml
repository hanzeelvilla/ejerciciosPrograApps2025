<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:textAlignment="center">
    <TextView
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:background="@color/orange"
            android:text="BOX UNO"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:id="@+id/textView3"
            android:textAlignment="center"/>

    <TextView
            android:text="BOX DOS"
            android:layout_width="350px"
            android:layout_height="350px"
            android:id="@+id/textView2"
            android:background="@color/orange"
            android:textAlignment="center"
            android:textColor="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView3"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
    />

    <TextView
            android:text="BOX TRES"
            android:layout_width="600px"
            android:layout_height="wrap_content"
            android:id="@+id/textView9"
            android:background="@color/orange"
            android:textColor="@color/white"
            android:height="60px"
            android:textAlignment="center"
            app:layout_constraintTop_toTopOf="@+id/textView2" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"
    />

    <TextView
            android:text="BOX CUATRO"
            android:layout_width="600px"
            android:layout_height="wrap_content"
            android:id="@+id/textView10"
            android:background="@color/orange"
            android:textColor="@color/white"
            android:height="60px"
            android:textAlignment="center"
            app:layout_constraintBottom_toTopOf="@+id/textView11" app:layout_constraintTop_toBottomOf="@+id/textView9"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"/>

    <TextView
            android:text="BOX CINCO"
            android:layout_width="600px"
            android:layout_height="wrap_content"
            android:id="@+id/textView11"
            android:background="@color/orange"
            android:textColor="@color/white"
            android:height="60px"
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"
            app:layout_constraintBottom_toBottomOf="@+id/textView2"
    />

</androidx.constraintlayout.widget.ConstraintLayout>